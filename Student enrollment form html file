    <script>
        var isNewRecord = true;
        var rollNoInput = document.getElementById('RollNo');
        var fullNameInput = document.getElementById('FullName');
        var classInput = document.getElementById('Class');
        var birthDateInput = document.getElementById('BirthDate');
        var addressInput = document.getElementById('Address');
        var enrollmentDateInput = document.getElementById('enrollmentDate');
        var saveBtn = document.getElementById('saveBtn');
        var updateBtn = document.getElementById('updateBtn');
        var resetBtn = document.getElementById('resetBtn');

        function saveData() {
            if (validateForm()) {
                var data = {
                    rollNo: rollNoInput.value,
                    fullName: fullNameInput.value,
                    class: classInput.value,
                    birthDate: birthDateInput.value,
                    address: addressInput.value,
                    enrollmentDate: enrollmentDateInput.value
                }
            }
        }
                
                   
